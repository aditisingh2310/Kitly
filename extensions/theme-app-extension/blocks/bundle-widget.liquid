{% schema %}
{
  "name": "Bundle Widget",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "bundle_handle",
      "label": "Bundle Handle",
      "info": "Enter the handle of the bundle to display"
    },
    {
      "type": "text",
      "id": "api_url",
      "label": "API URL",
      "default": "https://your-app-url.com/api",
      "info": "The URL of your Niche Bundler API"
    }
  ]
}
{% endschema %}

<div class="niche-bundle-widget" data-bundle-handle="{{ block.settings.bundle_handle }}" data-api-url="{{ block.settings.api_url }}">
  <div class="bundle-loading">Loading bundle...</div>
  <div class="bundle-content" style="display: none;">
    <div class="bundle-header">
      <h2 class="bundle-title"></h2>
      <p class="bundle-description">Save on this special bundle!</p>
    </div>

    <div class="bundle-products"></div>

    <div class="bundle-pricing">
      <div class="original-price">
        <span class="label">Regular Price:</span>
        <span class="price" data-original-price></span>
      </div>
      <div class="discount-amount">
        <span class="label">You Save:</span>
        <span class="amount" data-discount-amount></span>
      </div>
      <div class="final-price">
        <span class="label">Bundle Price:</span>
        <span class="price" data-final-price></span>
      </div>
    </div>

    <div class="bundle-actions">
      <button class="bundle-add-to-cart" type="button">Add Bundle to Cart</button>
    </div>
  </div>
  <div class="bundle-error" style="display: none;">
    <p>Unable to load bundle. Please try again later.</p>
  </div>
</div>

<style>
  .niche-bundle-widget {
    padding: 20px;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    margin: 20px 0;
  }

  .bundle-loading {
    text-align: center;
    padding: 40px;
    color: #666;
  }

  .bundle-header {
    margin-bottom: 20px;
  }

  .bundle-title {
    font-size: 24px;
    font-weight: bold;
    margin: 0 0 8px 0;
  }

  .bundle-description {
    color: #666;
    margin: 0;
  }

  .bundle-products {
    display: grid;
    gap: 12px;
    margin-bottom: 20px;
  }

  .bundle-product-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: #f9f9f9;
    border-radius: 4px;
  }

  .bundle-product-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 4px;
  }

  .bundle-product-details {
    flex: 1;
  }

  .bundle-product-title {
    font-weight: 600;
    margin: 0 0 4px 0;
  }

  .bundle-product-price {
    color: #666;
    font-size: 14px;
  }

  .bundle-pricing {
    background: #f5f5f5;
    padding: 16px;
    border-radius: 4px;
    margin-bottom: 20px;
  }

  .bundle-pricing > div {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
  }

  .bundle-pricing > div:last-child {
    margin-bottom: 0;
    padding-top: 8px;
    border-top: 2px solid #ddd;
  }

  .final-price {
    font-size: 20px;
    font-weight: bold;
    color: #2c6ecb;
  }

  .discount-amount .amount {
    color: #d82c0d;
    font-weight: 600;
  }

  .bundle-add-to-cart {
    width: 100%;
    padding: 16px;
    background: #2c6ecb;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .bundle-add-to-cart:hover {
    background: #1e5bb8;
  }

  .bundle-add-to-cart:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .bundle-error {
    text-align: center;
    padding: 40px;
    color: #d82c0d;
  }
</style>

<script src="{{ 'bundle-widget.js' | asset_url }}" defer></script>
